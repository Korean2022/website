<div class="container">
  <h1 class="mt-4">커뮤니티</h1>
  <a class="btn btn-primary" href="/posts/new">글쓰기</a>
  <ul class="list-group mt-3">
    <% posts.forEach(post => { %>
      <li class="list-group-item">
        <a href="/posts/<%= post._id %>"><%= post.title %></a> - <%= post.author %>
      </li>
    <% }) %>
  </ul>
</div>

<form action="/posts/search" method="get" class="mb-3">
  <input type="text" name="q" class="form-control" placeholder="검색어 입력">
  <button class="btn btn-secondary mt-1">검색</button>
</form>


